<% provide(:heading, "Login") %>
<% provide(:dashboard, "hide") %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "layouts/form_group", form: f, name: :email do %>
    <%= render 'layouts/form_email_field', form: f, name: :email %>
  <% end %>

  <%= render "layouts/form_group", form: f, name: :password do %>
    <%= render "layouts/form_password_field", form: f, name: :password %>
  <% end %>

  <% if devise_mapping.rememberable? -%>
    <div class="d-flex justify-content-center">
      <div class="custom-control custom-checkbox">
        <%= f.check_box :remember_me, class: "custom-control-input" %>
        <%= f.label :remember_me, 'remember me?', class: "custom-control-label" %>
      </div>
    </div>
  <% end -%>

  <%= render "layouts/center_flex_box" do %>
    <%= render "layouts/form_submit", form: f, name: "Confirm" %>
  <% end %>
<% end %>
