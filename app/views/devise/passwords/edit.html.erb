<% provide(:heading, "Change Password") %>
<% provide(:dashboard, "hide") %>

<%= link_to "back", root_path, class: "btn btn-link" %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= render "layouts/form_group", form: f, name: :password do %>
    <%= render "layouts/form_password_field", form: f, name: :password %>
  <% end %>

  <%= render "layouts/form_group", form: f, name: "Confirm password" do %>
    <%= render "layouts/form_password_field", form: f, name: :password_confirmation %>
  <% end %>

  <%= render "layouts/center_flex_box" do %>
    <%= render "layouts/form_submit", form: f, name: "Confirm" %>
  <% end %>
<% end %>
