<% provide(:heading, "Password Recovery") %>
<% provide(:dashboard, "hide") %>

<%= link_to "back", root_path, class: "btn btn-link" %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= render "layouts/form_group", form: f, name: :email do %>
    <%= render "layouts/form_email_field", form: f, name: :email %>
  <% end %>

  <%= render "layouts/center_flex_box" do %>
    <%= render "layouts/form_submit", form: f, name: "Confirm" %>
  <% end %>
<% end %>
