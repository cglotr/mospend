<%= form_with(model: spending, local: true) do |form| %>
  <% if spending.errors.any? %>
    <%= render "layouts/flash_alert", alerts: spending.errors.full_messages  %>
  <% end %>

  <%= render "layouts/form_group", form: form, name: :item do %>
    <%= render "layouts/form_text_field", form: form, name: :item %>
  <% end %>

  <%= render "layouts/form_group", form: form, name: :cost do %>
    <%= render "layouts/form_number_field", form: form, name: :cost %>
  <% end %>

  <%= render "layouts/form_group", form: form, name: :currency_id, nice_name: "Currency" do %>
    <%= form.select :currency_id, options_for_select(@currencies, @last_currency_id), {},
      class: "bg-light border-0 custom-select" %>
  <% end %>

  <%= render "layouts/center_flex_box" do %>
    <%= render "layouts/form_submit", form: form, name: "Confirm" %>
  <% end %>
<% end %>
